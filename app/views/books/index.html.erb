<div>
  <%= flash[:notice] %>
  </div>
  <h1>Books</h1>
  <table>
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><span class="book-title"><%= book.title %></span></td>
        <td><span class="book-body"><%= book.body %></span></td>
        <td><%= link_to "Show", book_path(book) %>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=> "Are you sure?" %>
        </td>
      </tr>

    </tbody>
  </table>
<% end %>


<h3>New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>


<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
</div>


